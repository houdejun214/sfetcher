<?xml version="1.0"?>
<configuration>

    <!-- crawl site for amazon -->
    <site name="amazon" fetcher="com.sdata.component.fetcher.AmazonFetcher"
          storer="com.sdata.core.data.SdataStandardStorer">
        <property>
            <name>FetchThreadNum</name>
            <value>1</value>
        </property>
        <property>
            <name>source</name>
            <value>amazon</value>
        </property>
        <property>
            <name>filterFile</name>
            <value>template/amazon/amazon.category.filter.list</value>
        </property>
        <property>
            <name>datumXml</name>
            <value>template/amazon/tpl-amazon-datum.xml</value>
        </property>
        <property>
            <name>storeXml</name>
            <value>template/amazon/tpl-amazon-store.xml</value>
        </property>
        <property>
            <name>TaskInterval</name>
            <value>86400000</value>
        </property>
    </site>
</configuration>