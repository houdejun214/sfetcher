<?xml version="1.0"?>
<configuration>
 <!-- crawl site for dianping -->
	  <site name="dianping" 
	  	fetcher = "com.sdata.core.parser.html.SdataHtmlFetcher"
	  	storer = "com.sdata.core.data.SdataStandardStorer"  >
			<property>
				<name>FetchThreadNum</name>
				<value>1</value>
			</property>
			<property>
				<name>source</name>
				<value>dianping</value>
			</property>
			<property>
				<name>UseProxy</name>
				<value>false</value>
			</property>
			<property>
			  <name>maxDatum</name>
			  <value>500</value>
			</property>
			<property>
				<name>strategyXml</name>
				<value>template/dianping/tpl-dianping-strategy.xml</value>
			</property>
			<property>
				<name>datumXml</name>
				<value>template/dianping/tpl-dianping-datum.xml</value>
			</property>
			<property>
				<name>storeXml</name>
				<value>template/dianping/tpl-dianping-store.xml</value>
			</property>
			<property>
				<name>TaskInterval</name>
				<value>20000</value>
			</property>
	  </site>
</configuration>