<?xml version="1.0"?>
<datum>
	<!-- shop warning:if have action then from is must needed -->
	<!--<field name="_id" from=""  type="string" selector="" link="" ref="" next="" param="" action="" index="dbid"></field> -->
	<field name="_id"  selector="span.msg a:contains(First)|[href]|~/topicId=(\d+)/|[1]" index="dbid"></field>
	<field name="title" selector=".forumOptionRow|txt" index="title"></field>
	<field name="url"  index="url"></field>
	<field name="block" ></field>
	<field name="block_url" ></field>
	<field name="views" ></field>
	<field name="replies" ></field>
	<field name="rating" ></field>
	<field name="lastpost" ></field>
	<list name="replys" selector=".forumRowRTE" next="span.msg a:contains(Older)|link">
		 <item> 
		 	<field name="rid" selector="{{_id}_{uid}_{rtime}}" action="touuid"></field>
		 	<field name="aid" ref="_id"></field>
		 	<field name="uid" selector="- td a|[0]|[name]"></field>
		 	<field name="uurl" selector="- td a|[1]|link"></field>
		 	<field name="uname" selector="- td a|[1]|txt"></field>
		 	<field name="rtime" selector="- td|[1]|span|txt"></field>
		 	<field name="rcontent" selector="td|[1]|html"></field>
			<field name="origin" index="origin" value="sharejunction"></field>
		 </item>
	</list>
	<field name="st" value="forum"></field>
	<field name="origin" index="origin" value="sharejunction"></field>
	<field name="classification" index="classification" indexOnly="true" value="post"></field>
	<field name="docloc" index="loc" value="cn" indexOnly="true" ></field>
	<field name="lang" index="lang" value="zh" indexOnly="true"></field>
	<field from="fetdt" name="fetdt" action="todate" index="fetchtime"></field>
</datum>