<?xml version="1.0"?>
<!-- filter '&amp;' = '&' -->

<datum filter="null:content&amp;id">
	<!-- tweet -->
	<field name="_id" from ="_id"></field>
	
 	<field name="id" from="id"></field>
 	<field name="url" from="url" ></field>
	<field name="content"  from="message"></field>
	
	<field name="geo"  from="place/location/latitude,place/location/longitude"></field>
	<field name="loc"  from="place/name"></field>
	<field name="lang"  value="en"></field>
	
	<field name="pub_time"  from="created_time" action="todate"></field>
	<field name="fet_time"  action="todate"></field>
	
	<!-- user -->
 	<field name="uid"   from="user/id" ></field>
 	<field name="uname" from="user/name"></field>
	
	<field name="image" from="picture" action="saveImage"></field>
	<!-- from user no video info-->
	<field name="video" from="source"></field>
	<field name="head"  from="user/head" ></field>
	
	<field name="dtf_s"></field>
	<field name="dtf_oid"></field>
	
	<!-- others -->
	<field name="type"  value="post" ></field>
	<field name="updated_time" from="updated_time"></field>
	<field name="like_count" from="likes/count"></field>
	<field name="like_user" from="likes/data"></field>
	<field name="uurl" from="user/url"></field>
   
	<field name="user" from="user">
		<field name="_id" from="id"></field>
		<field name="id" from="id"></field>
		<field name="name" from="name"></field>
		<field name="gender" from="gender"></field>
		<field name="languages" from="languages"></field>
		<field name="url" from="link"></field>
		<field name="username" from="username"></field>
		<field name="updated_time" from="updated_time"></field>
		<field name="head" from="head"></field>
		<field name="location" from="location"></field>
		<field name="birthday" from="birthday"></field>
		<field name="bio" from="bio"></field>
		<field name="about" from="about"></field>
		<field name="category" from="category"></field>
		<field name="phone" from="phone"></field>
		<field name="likes" from="likes"></field>
		<field name="info" from="general_info"></field>
	</field>
	<list name="comments" from="comments">
		<item>
			<!-- dcf -->
			<field name="_id" from="_id"></field>
			<field name="id" from="id"></field>
			<field name="uname" from="from/name"></field>
			<field name="uid"  from="from/id"></field>
			<field name="content"  from="message"></field>
			<field name="pub_time"  from="created_time" action="todate"></field>
			
			<!-- others parent id must like this-->
			<field name="_parentid" ref="id" handler="com.sdata.sense.handler.SenseParentIdHandler"></field>
			<field name="parent_url" ref="url"></field>
			<field name="type" value="comments"></field>
			<field name="like_count" from="like_count"></field>
			<field name="user_likes" from="user_likes"></field>
		</item>
	</list>
</datum>