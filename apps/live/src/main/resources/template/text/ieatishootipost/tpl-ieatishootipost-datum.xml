<?xml version="1.0"?>
<datum filter="null:_id&amp;url&amp;title&amp;content&amp;pub_time">
	<!-- default column family -->
 	<field name="_id" ref="_id"  ></field>
 	<field name="id"  ref="_id"></field>
 	<field name="url" ref="url"></field>
 	
	<field name="title"  selector=".post h3.post-title|txt"></field>
	<field name="content"  selector=".post .post-body|html"></field>
	<field name="pub_time"  selector=".post .post-footer .published|[title]" action="todate"></field>
	<field name="fet_time" action="todate"></field>
	<field name="lang" value="en"></field>

	<field name="image" selector=".post .post-body img|links" action="saveImage"></field>
	<field name="uname" value="ieat" ></field>
	<field name="uid" value="ieat"></field>
	<field name="geo"></field>
	<field name="loc" value="singapore"></field>
</datum>