	<site name="common" fetcher="com.sdata.common.fetcher.CommonProxyFetcher"
          storer="com.sdata.common.data.CommonDatumStorer">
        <filter pos="before" class="com.sdata.common.data.CommonDataFilter" />
        <property>
            <name>MainCrawlThreadNum</name>
            <value>1</value>
        </property>
        <property>
            <name>FetchThreadNum</name>
            <value>10</value>
        </property>
        <property>
            <name>input.list</name>
            <value>template/common/input.list</value>
        </property>
        <property>
            <name>TaskInterval</name>
            <value>86400000</value>
        </property>
	<property>
            <name>FetchSleepInterval</name>
            <value>500</value>
        </property>
        <!-- mysql data store info-->
        <property>
            <name>storer.mysql.jdbc.host</name>
            <value>172.31.51.56</value>
        </property>
        <property>
            <name>storer.mysql.jdbc.database</name>
            <value>flipkart</value>
        </property>
        <property>
            <name>storer.mysql.jdbc.username</name>
            <value>root</value>
        </property>
        <property>
            <name>storer.mysql.jdbc.password</name>
            <value>mysql!123456</value>
        </property>
        <!-- -->
        <property>
            <name>datumXml</name>
            <value>template/common/tpl-common-datum.xml</value>
        </property>
        <property>
            <name>storeXml</name>
            <value>template/common/tpl-common-store.xml</value>
        </property>
        <property>
            <name>strategyXml</name>
            <value>template/common/tpl-common-strategy.xml</value>
        </property>
	</site>
</configuration>
