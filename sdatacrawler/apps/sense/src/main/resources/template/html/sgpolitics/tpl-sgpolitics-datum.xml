<?xml version="1.0"?>
<datum filter="null:_id&amp;url&amp;title&amp;content&amp;pub_time">
	<!-- default column family -->
 	<field name="_id" ref="_id"  ></field>
 	<field name="id"  ref="_id"></field>
 	<field name="url" ref="url"></field>
	<field name="title"  selector="#content #contentleft h1|txt"></field>
	<field name="content"  selector="#content #contentleft p|html"></field>
	<field name="pub_time"  selector="#content #contentleft .date|txt|~/(.*)by/|[1]" ></field>
	<field name="fet_time" action="todate"></field>
	<field name="lang" value="en"></field>

	<field name="image" selector="#content #contentleft p img|links" action="saveImage"></field>
	<field name="video" selector="#content #contentleft p iframe|links "></field>
	<field name="uname" selector="#content #contentleft .date a[rel=author]|txt" ></field>
	<field name="uid"></field>
	<field name="geo"></field>
	<field name="loc" value="singapore"></field>
	
	<field name="dtf_s"></field>
	<field name="dtf_pv"></field>
	<field name="dtf_pt"></field>
	<field name="dtf_oid"></field>
	
	<!-- extended column family -->
</datum>